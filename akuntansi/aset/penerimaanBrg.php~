<script>
	var a1 = new DSGridObject("gridbox");
	a1.setHeader("DATA PENERIMAAN BARANG");
	a1.setColHeader("NO,TANGGAL PENERIMAAN,NO GUDANG,NAMA REKANAN,KODE BARANG,NAMA BARANG,NILAI, POSTING <br><input type='checkbox' name='chkAll' id='chkAll' onClick='chkKlik(this.checked);'>");
	a1.setIDColHeader(",tgl_terima,no_gudang,namarekanan,kodebarang,namabarang,NL,");
	a1.setColWidth("50,150,200,200,100,200,100,100");
	a1.setCellAlign("center,center,center,center,center");
	a1.setCellType("txt,txt,txt,txt,txt,txt,txt,chk");
	a1.setCellHeight(20);
	a1.setImgPath("../icon");
	a1.setIDPaging("paging");
	a1.onLoaded(konfirmasi);
	//a1.attachEvent("act");
	alert("../aset/utils.php?pilihan=terima&jnsbrg="+document.getElementById("Brg").value+"&cmb="+document.getElementById("cmbPost").value+"&tgl1="+document.getElementById('tgl1').value+"&tgl2="+document.getElementById('tgl2').value);
	a1.baseURL("../aset/utils.php?pilihan=terima&jnsbrg="+document.getElementById("Brg").value+"&cmb="+document.getElementById("cmbPost").value+"&tgl1="+document.getElementById('tgl1').value+"&tgl2="+document.getElementById('tgl2').value);
	a1.Init();

function konfirmasi(key,val){
		//alert(val+'-'+key);
		if(key=='Error'){
			if(val=='posting'){
				alert('Terjadi Error dlm Proses Posting !');
			}
		}else{
			if(val=='posting'){
				alert('Proses Posting Berhasil !');
			}
		}
	}

	function chkKlik(p){
	var cekbox=(p==true)?1:0;
		//alert(p);
		for (var i=0;i<a1.getMaxRow();i++){
			a1.cellsSetValue(i+1,8,cekbox);
		}
	}
	
	function posting(){
		var tmp ='';
			for (var i=0;i<a1.getMaxRow();i++){
				//alert("a");
			if (a1.obj.childNodes[0].childNodes[i].childNodes[7].childNodes[0].checked){
				tmp += a1.getRowId(i+1)+"*";
				//alert(tmp);
				//tmp+=a1.getRowId(i+1)+String.fromCharCode(5)+ValidasiText(a1.cellsGetValue(i+1,3))+String.fromCharCode(5)+ValidasiText(a1.cellsGetValue(i+1,4))+String.fromCharCode(5)+ValidasiText(a1.cellsGetValue(i+1,5))+String.fromCharCode(5)+ValidasiText(a1.cellsGetValue(i+1,6))+String.fromCharCode(6);
				//alert(tmp);
			}
		}
		
		var url = "../aset/utils.php?pilihan=terima&jnsbrg="+document.getElementById("Brg").value+"&cmb="+document.getElementById("cmbPost").value+"&tgl1="+document.getElementById('tgl1').value+"&tgl2="+document.getElementById('tgl2').value+"&act=posting&data="+tmp;
		//alert(url);
		a1.loadURL(url,"","GET");		
		}
	
	function kirim(){
	var url;
	if(document.getElementById("cmbPost").value==1){
		document.getElementById("pst").disabled = true;
		}else{
				document.getElementById("pst").disabled = false;			
			}
		url="../aset/utils.php?pilihan=terima&jnsbrg="+document.getElementById("Brg").value+"&cmb="+document.getElementById("cmbPost").value+"&tgl1="+document.getElementById('tgl1').value+"&tgl2="+document.getElementById('tgl2').value;
		//alert(url);		
		a1.loadURL(url,"","GET");
	}
	
	function goFilterAndSort(grd){
	var url;
		//alert(grd);
		if (grd=="gridbox"){		
			url="../aset/utils.php?pilihan=terima&jnsbrg="+document.getElementById("Brg").value+"&filter="+a1.getFilter()+"&sorting="+a1.getSorting()+"&page="+a1.getPage()+"&tgl1="+document.getElementById('tgl1').value+"&tgl2="+document.getElementById('tgl2').value;
			//alert(url);
			a1.loadURL(url,"","GET");
		}
	}
</script>
