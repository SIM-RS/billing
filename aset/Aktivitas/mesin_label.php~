<?php
include '../koneksi/konek.php';
$d = $_REQUEST["id"];
$sql = "select a.kodeunit,b.kodebarang,s.thn_pengadaan,s.noseri
			from as_seri2 s 
			inner join as_ms_barang b on s.idbarang=b.idbarang
			inner join as_ms_unit a on a.idunit=s.ms_idunit
			where s.idseri = $d";
			$c = mysql_query($sql);
			$row = mysql_fetch_array($c);
$qw = mysql_query("select kodedepartemen from as_setting");
$rf = mysql_fetch_array($qw);
$kode_lokasi = $rf["kodedepartemen"].".".$row["kodeunit"].".".substr($row["thn_pengadaan"],2,4);
$brcode = $kode_lokasi."*".$row["kodebarang"]."-".str_pad($row["noseri"], 4, "0", STR_PAD_LEFT);
?>
