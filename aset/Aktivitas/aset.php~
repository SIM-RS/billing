    <script type="text/JavaScript" language="JavaScript">
        var tmp;
        function ambilData()
        {
            tmp = grid.getRowId(grid.getSelRow()).split('<?php echo chr(36);?>');
			//alert(tmp);
            var p = "txtId*-*"+(tmp[0]);
            fSetValue(window,p);
        }

        /*function todo(act)
