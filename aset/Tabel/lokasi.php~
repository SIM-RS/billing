    <script type="text/javascript" language="javascript">
        function PreviewTree()
        {
            location='lokasi_tree.php';
        }
        function ambilDataUnit()
        {
            var p="txtId*-*"+(unt.getRowId(unt.getSelRow()));
            fSetValue(window,p);
        }

        function hapus(id)
        {
            var rowidUnit = document.getElementById("txtId").value;

            if(confirm("Anda yakin menghapus Lokasi "+unt.cellsGetValue(unt.getSelRow(),3)+"?"))
            {
                unt.loadURL("utils_utils.php?pilihan=lokasi&act=hapus_lokasi&rowid="+rowidUnit,"","GET");
            }
        }

        function goFilterAndSort(grdUnit)
        {
            if (grdUnit=="gridboxUnit")
            {
                unt.loadURL("utils_utils.php?pilihan=lokasi&filter="+unt.getFilter()+"&sorting="+unt.getSorting()+"&page="+unt.getPage(),"","GET");
				alert("utils_utils.php?pilihan=lokasi&filter="+unt.getFilter()+"&sorting="+unt.getSorting()+"&page="+unt.getPage());
            }
        }

        var unt=new DSGridObject("gridboxUnit");
        unt.setHeader(".: DATA LOKASI :.");
        unt.setColHeader("NO,KODE LOKASI,NAMA LOKASI,STATUS");
        unt.setIDColHeader(",kodelokasi,namalokasi,");
        unt.setColWidth("50,200,,75");
        unt.setCellAlign("center,LEFT,center,center");
        unt.setCellHeight(20);
        unt.setImgPath("../icon");
        unt.setIDPaging("pagingUnit");
        unt.attachEvent("onRowClick","ambilDataUnit");
        unt.baseURL("utils_utils.php?pilihan=lokasi");
        unt.Init();
    </script>
